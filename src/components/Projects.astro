---
import Cplusplus from '../components/icons/cplusplus.astro'
import LinkButton from '../components/Linkbutton.astro'
import GitHub from '../components/icons/github.astro'
import Java from '../components/icons/java.astro'
import Excel from '../components/icons/excel.astro'
import Oracle from '../components/icons/oracle.astro'
import Sql from '../components/icons/sql.astro'
import Powerbi from '../components/icons/Powerbi.astro'

    const TAGS = {
        CMASMAS : {
            name: 'C++',
            class: 'bg-blue text-black dark:bg-blue-500',
            icon: Cplusplus
        },
        JAVA : {
            name: 'Java',
            class: 'bg-red text-black dark:bg-red-300',
            icon: Java
        },
        EXCEL : {
            name: 'Excel',
            class: 'bg-green text-black dark:bg-green-500',
            icon: Excel
        },
        ORACLE : {
            name: 'Oracle',
            class: 'bg-red text-black dark:bg-red-500',
            icon: Oracle
        },
        SQL : {
            name: 'SQL Server',
            class: 'bg-red text-black dark:bg-gray-300',
            icon: Sql
        },
        POWERBI : {
            name: 'Power BI',
            class: 'bg-white text-black dark:bg-yellow-500',
            icon: Powerbi
        }
    }

    const PROJECTS = [
       { 
        title: 'Procesamiento de Lenguaje Natural',
        description: 'Proyecto de procesamiento de una cadena de texto que define un lenguaje y que se encarga de verificar si la cadena de texto ingresada es valida para el lenguaje anteriormente definido.',
        link: 'https://github.com/williamjesussierracordova/compilador/blob/main/semana5.cpp',
        github: 'https://github.com/williamjesussierracordova/compilador/blob/main/semana5.cpp',
        image: '/lenguaje.webp',
        tags: [TAGS.CMASMAS]
    },
    {
      title: 'Sistema para un centro educativo',
      description: 'Es una aplicación de escritorio desarrollada en java conectada a una base de datos local donde mediante un ERD definimos las clases/tablas/funciones que se necesitan para tener un registro actualizado de todos los participantes en los centros educativos (director, profesor, coordinador, estudiantes, padres de familia), asimismo los procesos de cada uno de los participantes como notas, horarios, asistencias, etc.',
      link:'https://github.com/williamjesussierracordova/Sistema_Educativo',
      github: 'https://github.com/williamjesussierracordova/Sistema_Educativo',
      image: '/colegio.webp',
      tags: [TAGS.JAVA, TAGS.SQL]
    },
    {
      title: 'Cash Register',
      description: 'Este proyecto consiste en una aplicación de escritorio desarrollada en Java para el manejo de una tienda comercial haciendo el registro de todos los participantes del negocio, así como también los procesos que existen dentro de la tienda tales como: ventas, proveedores, stock de productos, etc.',
      link:'https://github.com/williamjesussierracordova/Cash_register_poo_java/tree/main/src',
      github: 'https://github.com/williamjesussierracordova/Cash_register_poo_java/tree/main/src',
      image: '/image.webp',
      tags: [TAGS.JAVA, TAGS.SQL]
    },
    {
      title: 'Dashboard de vacunación COVID-19',
      description: 'Proyecto en el cual se tuvo que hacer una limpieza de datos de un archivo Excel para luego insertarlo en una base de datos de Oracle donde aplicamos buenas prácticas para el buen manejo de la BD y finalmente con los datos transformados poder hacer un dashboard en powerBi que nos permitió ver el avance de la vacunación en los distintos distritos, provincias y departamentos del Perú.',
      link:'/',
      github: '/',
      image: '/covid.webp',
      tags: [TAGS.EXCEL, TAGS.ORACLE, TAGS.POWERBI]
    }
    ]
---

<div class="flex flex-col gap-y-16">
    {
      PROJECTS.map(({ image, title, description, tags, link, github }) => (
        <article>
          <h3 class="text-4xl font-semibold text-yellow-800 dark:text-yellow-200 mb-2">
            {title}
          </h3>
          
            <p class="text-lg mb-4 text-pretty overflow-auto max-h-full">{description}</p> 
            <ul class="flex gap-x-2 flex-row mb-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
          <img
            loading="lazy"
            class="rounded shadow-2xl shadow-white/30 aspect-video"
            src={image}
            alt={`Captura de pantalla del proyecto ${image}`}
          />
          <footer class="flex gap-x-4 items-end justify-start mt-4">
            {github && (
              <LinkButton href={github} >
                <GitHub class="size-6" />
                Ver código fuente
              </LinkButton>
            )}
            <LinkButton href={link} >
              <svg
                width="24"
                height="24"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <>
                  <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                  <path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4" />
                  <path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4" />
                  <path d="M12.5 3a16.989 16.989 0 0 1 1.828 4" />
                  <path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4" />
                  <path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4" />
                  <path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4" />
                  <path d="M2 10l1 4l1.5 -4l1.5 4l1 -4" />
                  <path d="M17 10l1 4l1.5 -4l1.5 4l1 -4" />
                  <path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4" />
                </>
              </svg>
              Ir al sitio web
            </LinkButton>
          </footer>
        </article>
      ))
    }
  </div>